ENVIRONMENT=development  # development | staging | production

# Steam API Configuration
# Get your API key at: https://steamcommunity.com/dev/apikey
STEAM__API_KEY=
STEAM_REQUESTS_PER_MINUTE=40
STEAM_TIMEOUT_SECONDS=30

# Microsoft Fabric Configuration
# Find these in your Fabric workspace URL
FABRIC__WORKSPACE_ID=00000000-0000-0000-0000-000000000000
FABRIC__LAKEHOUSE_ID=00000000-0000-0000-0000-000000000000
FABRIC_LAKEHOUSE_NAME=steam_analytics

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY_SECONDS=1.0
RETRY_MAX_DELAY_SECONDS=60.0

# Logging Configuration
LOG_LEVEL=INFO          # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=console      # json | console
