ENVIRONMENT=development  # development | staging | production
STORAGE_MODE=fabric

# Steam API Configuration
# Get your API key at: https://steamcommunity.com/dev/apikey
STEAM__API_KEY=
STEAM_REQUESTS_PER_MINUTE=40
STEAM_TIMEOUT_SECONDS=30

# Microsoft Fabric Configuration
# Find these in your Fabric workspace URL
# Workspace
FABRIC__WORKSPACE_ID=00000000-0000-0000-0000-000000000000
FABRIC_WORKSPACE_NAME=steam-analytics-dev

# Bronze Lakehouse (raw data)
FABRIC__BRONZE_LAKEHOUSE_ID=00000000-0000-0000-0000-000000000000
FABRIC_BRONZE_LAKEHOUSE_NAME=lh_bronze

# Silver Lakehouse (cleaned + SCD2)
FABRIC__SILVER_LAKEHOUSE_ID=00000000-0000-0000-0000-000000000000
FABRIC_SILVER_LAKEHOUSE_NAME=lh_silver

# Gold Lakehouse (aggregations + semantic model)
FABRIC__GOLD_LAKEHOUSE_ID=00000000-0000-0000-0000-000000000000
FABRIC_GOLD_LAKEHOUSE_NAME=lh_gold

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY_SECONDS=1.0
RETRY_MAX_DELAY_SECONDS=60.0

# Logging Configuration
LOG_LEVEL=INFO          # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=console      # json | console
